<form role="form">
    <div class="col-xs-6">
        <div class="form-group">
            <label class="control-label" for="inputEmail">邮箱</label>
            <input type="email" class="form-control" id="inputEmail" placeholder="邮箱">
            <span class="help-block hidden">邮箱格式不正确</span>
        </div>
        <div class="form-group">
            <label class="control-label" for="inputPassword">密码</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="密码">
            <span class="help-block hidden">密码格式不正确</span>
        </div>
        <div class="form-group">
            <label class="control-label" for="inputRepeatPassword">重复密码</label>
            <input type="password" class="form-control" id="inputRepeatPassword" placeholder="重复密码">
            <span class="help-block hidden">两次输入密码不一致</span>
        </div>
        <button type="submit" class="btn btn-default">注册</button>
    </div>
</form>